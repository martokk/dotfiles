#!/bin/bash

# --- SERVER COMMANDS -----------------------------------------------------
alias start_vserver="sh ~/Scripts/Shell/start_vserver_in_vm.sh"
alias ssh_vserver="ssh vserver@vserver"
alias ssh_aws="ssh ubuntu@aws-server"

# --- QUICK FIXES ----------------------------------------------------------------
# Fix Mouse Scroll Direction
alias fix_mouse="sh ~/Scripts/Shell/fix_mouse_natural_scroll_direction.sh && notify-send 'Mouse scroll direction set.'"

# Fix Cracking Audio by resetting the pusleaudio profile
alias fix_audio="pactl set-card-profile 1 off; sleep 0.5; pactl set-card-profile 1 output:analog-stereo && notify-send 'Audio Reset'"



# --- QUICK RESTARTS ----------------------------------------------------------------
# Restart Plasmashell
alias restart_plasmashell="killall plasmashell && kstart5 plasmashell && notify-send 'Plasmashell restarted.'"

# Fix Cracking Audio by resetting the pusleaudio profile
alias restart_brave="killall brave && brave-browser && notify-send 'Brave restarted.'"



# --- NAVIGATION ----------------------------------------------------------------
alias cdi="cd /media/martokk/FILES/__INBOX__"
alias cdd="cd /media/martokk/FILES/Dotfiles"
alias cddl="cd /media/martokk/FILES/Downloads"
alias cdp="cd /media/martokk/FILES/Projects"
alias cds="cd /media/martokk/FILES/Servers"

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# Grep History
alias gh='history|grep'

# --- OVERRIDE DEFAULT COMMANDS ----------------------------------------------------------------
# List all files colorized in long format, including dot files
alias ls="command ls -la --color"

# Always enable colored `grep` output
alias grep='grep --color=auto '

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '



# --- EXPORT ENV ----------------------------------------------------------------
export LS_COLORS='no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'



# --- HELPERS: SYSTEM ----------------------------------------------------------------
alias paths='echo -e "      PATHS\n-------------------"; echo -e "${PATH//:/\n}"'


# --- HELPERS: NETWORK ----------------------------------------------------------------
# IP addresses
alias pubip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="sudo ifconfig | grep -Eo 'inet (addr:)?([0-9]*\\.){3}[0-9]*' | grep -Eo '([0-9]*\\.){3}[0-9]*' | grep -v '127.0.0.1'"
alias ips="sudo ifconfig -a | grep -o 'inet6\\? \\(addr:\\)\\?\\s\\?\\(\\(\\([0-9]\\+\\.\\)\\{3\\}[0-9]\\+\\)\\|[a-fA-F0-9:]\\+\\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Flush Directory Service cache
alias flush="dscacheutil -flushcache && killall -HUP mDNSResponder"

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\\: .*|GET \\/.*\""

# vhosts
alias hosts='sudo nano /etc/hosts'



